<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PokemonApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="StateAlertDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">
            @android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">0dip</item>
        <item name="android:windowMinWidthMinor">0dip</item>

    </style>

    <style name="RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:drawableStart">@drawable/ic_state_radio</item>
        <item name="android:checked">false</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:button">@null</item>

    </style>

    <style name="Body3" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">10sp</item>
        <item name= "lineHeight">16sp</item>
    </style>

    <style name="BodyCaption" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="Subtitle2" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.PokemonApp" parent="Base.Theme.PokemonApp" />
</resources>