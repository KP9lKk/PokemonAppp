<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/PrimaryColor"
    app:cardCornerRadius="12dp"
    app:contentPadding="4dp"
    tools:context=".screens.ChangeStateFragmentDialog">
<LinearLayout

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:paddingHorizontal="20dp"
        android:paddingVertical="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sort_by"
        android:textColor="@color/white"
        android:textAppearance="@style/Subtitle2" />
    <RadioGroup
        android:id="@+id/ChangeStateGroup"
        android:background="@drawable/rounded_white_backgorund_8px"
        android:paddingVertical="16dp"
        android:paddingHorizontal="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/NumberCheck"
            style="@style/RadioButtonStyle"
            android:textAppearance="@style/Body3"
            android:text="@string/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/NameCheck"
            android:layout_marginTop="16dp"
            style="@style/RadioButtonStyle"
            android:textAppearance="@style/Body3"
            android:text="@string/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RadioGroup>
</LinearLayout>
</androidx.cardview.widget.CardView>