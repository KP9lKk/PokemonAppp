<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/PrimaryColor"
    android:orientation="vertical"
    tools:context=".screens.MainScreen">
<LinearLayout
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:layout_marginTop="4dp"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_pokeball" />
    <TextView
        android:fontFamily="@font/poppins_bold"
        android:layout_marginStart="16dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textFontWeight="700"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pok_dex" />
</LinearLayout>
    <LinearLayout
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.appcompat.widget.SearchView
            app:searchIcon="@drawable/ic_search_small"
            app:iconifiedByDefault="false"
            app:closeIcon="@drawable/ic_close_small"
            app:queryHint="@string/search"
            android:theme="@style/SearchViewStyle"
            app:queryBackground="@android:color/transparent"
            app:searchHintIcon="@drawable/ic_search_small"
            android:background="@drawable/search_view_background"
            android:layout_width="280dp"
            android:layout_height="32dp"/>
        <ImageButton
            android:scaleType="centerCrop"
            android:id="@+id/ChangeMode"
            android:padding="8dp"
            android:src="@drawable/ic_tag"
            android:layout_marginStart="16dp"
            android:background="@drawable/search_view_background"
            android:layout_width="32dp"
            android:layout_height="32dp"/>

    </LinearLayout>

</LinearLayout>
